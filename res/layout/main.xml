<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="wrap_content" android:padding="30dip"
	android:layout_gravity="center" android:saveEnabled="true">
	<TextView android:text="@string/app_name"
		android:layout_height="wrap_content" android:layout_width="wrap_content"
		android:layout_gravity="center" android:layout_marginBottom="25dip"
		android:textSize="24.5sp" />
	<Button android:id="@+id/node_new_button" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="@string/node_new" />
	<Button android:id="@+id/get_info_button" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="@string/get_info" />
</LinearLayout>