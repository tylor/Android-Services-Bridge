<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:saveEnabled="true">

	<EditText android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:maxLines="1" android:id="@+id/Title"
		android:singleLine="true" android:inputType="textAutoCorrect" />

	<EditText android:layout_width="fill_parent"
		android:layout_height="0dip" android:layout_weight="1" android:id="@+id/Body"
		android:gravity="top|left" android:autoText="true"
		android:inputType="textAutoCorrect|textMultiLine|textCapSentences" />

	<TableRow>
		<CheckBox android:id="@+id/publish" android:text="@string/publish"
			android:layout_weight="0.5" android:layout_width="wrap_content" />
		<Button android:id="@+id/node_save_button" android:text="@string/save"
			android:layout_weight="0.5" android:layout_width="wrap_content" />
	</TableRow>
</TableLayout>
